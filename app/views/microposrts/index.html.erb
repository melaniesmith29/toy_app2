<h1>Microposrts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @microposrts.each do |microposrt| %>
      <tr>
        <td><%= microposrt.content %></td>
        <td><%= microposrt.user_id %></td>
        <td><%= link_to 'Show', microposrt %></td>
        <td><%= link_to 'Edit', edit_microposrt_path(microposrt) %></td>
        <td><%= link_to 'Destroy', microposrt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

